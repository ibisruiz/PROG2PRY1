@model IEnumerable<PROG2PRY1.Models.T_Clientes>

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

<p>
        @Html.ActionLink("Agregar Cliente", "Create", new { id= "" }, new { @class = "btn btn-info" })   
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-secondary" }) 
                    @Html.ActionLink("Información", "Details", new { id = item.ID }, new { @class = "btn btn-info" }) 
                    @Html.ActionLink("Borrar", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" }) 
                </td>
            </tr>
        }
        </thead>
</table>
