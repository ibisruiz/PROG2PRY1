@model IEnumerable<PROG2PRY1.Models.T_Productos>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Agregar Producto", "Create", new { id = "" }, new { @class = "btn btn-info" })
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.T_Categoria.Descripion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.T_Clientes.Nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.T_Categoria.Descripion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.T_Clientes.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("información", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Borrar", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>

            </tr>
        }

</table>
